---
import Layout from '~/layouts/Layout.astro';
import BasicCTA from '~/components/astro/ctas/BasicCTA.astro';
// import BasicFeatures from '~/components/astro/features/BasicFeatures.astro';
import StepsFeatures from '~/components/astro/features/StepsFeatures.astro';
import GenericHeroWithImage from '~/components/astro/hero/GenericHeroWithImage.astro';
import ArticleList from '~/components/astro/blog/ArticleList.astro';
import Gumroad from '~/components/ressource/gumroad.astro';


---

<Layout title="Git & GitHub : the first steps">
<main id="swup">
  <div class="p-10 w-full" style="height: 2rem;">
  </div>
  {false && <GenericHeroWithImage
    tagline="Prenez Git en main" 
    image="/images/products/git.jpg" 
    text="Dans ce livret, nous voyons le <strong>cheminement pas à pas</strong> qu’utilisent des développeurs pour travailler avec <strong>l’outil incontournable qu’est git</strong>. En partant de la base (l’installation et l’initialisation), nous allons construire ensemble un dépôt git. Et voir pas à pas chacune des étapes nécessaires à la maitrise de Git."
    />}
  {false && <StepsFeatures />}
  <div class="w-full flex flex-row content-center items-center place-content-center">
    <div class="w-full md:w-1/2 self-center">
     <Gumroad slug="js-first-steps" class="mx-auto" />
    </div>
  </div>
  <div class="flex flex-column w-full text-center p-5 content-center items-center ">
    <div>
    <span>NB: This book is also available via <a class="underline" href="https://amazon.com/JavaScript-First-started-development-journey/dp/B0B9QM9KHC/">Amazon.com</a></span>
    </div>
  </div>
</main>
</Layout>